    /* Estilos globais para o Motor de Layout */
    .drag-handle {
      cursor: grab;
      padding: 4px 0;
      text-align: center;
      color: #cbd5e1;
      font-size: 1.2rem;
      transition: color 0.2s;
      border-top-left-radius: 8px;
      border-top-right-radius: 8px;
    }

    .drag-handle:hover {
      color: #64748b;
    }

    .drag-handle:active {
      cursor: grabbing;
    }

    .layout-ghost {
      opacity: 0.4;
      background: #e2e8f0 !important;
      border: 2px dashed #94a3b8 !important;
    }

    .agenda-col {
      position: relative;
    }
  </style>
